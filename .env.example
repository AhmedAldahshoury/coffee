APP_ENV=local
# Local/dev default uses SQLite to work out-of-the-box without Docker.
# For local Postgres use e.g. postgresql+psycopg://coffee:coffee@localhost:5432/coffee
DATABASE_URL=sqlite:///./coffee.db

# SECURITY: required in production; must not use defaults below.
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

DEMO_MODE=false
FAILED_BREW_SCORE=0.0
LOG_LEVEL=INFO
OPTUNA_SKIP_COMPATIBILITY_CHECK=true

# Comma-separated list, e.g. http://localhost:3000,https://app.example.com
# Safe default is empty (no CORS origins allowed).
CORS_ALLOWED_ORIGINS=
ENABLE_REQUEST_ID_MIDDLEWARE=true

# Argon2 password hashing settings.
HASH_TIME_COST=3
HASH_MEMORY_COST=65536
HASH_PARALLELISM=4
